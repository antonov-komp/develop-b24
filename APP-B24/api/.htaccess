# Apache configuration for API routing
# Если используется Apache, этот файл обеспечит правильную обработку запросов

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /APP-B24/api/
    
    # Если запрос не к существующему файлу или директории
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Перенаправляем все запросы на index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

